  journal  = {Computers & Education},
  pages    = {104094},
  title    = {A review of automated feedback systems for learners: Classification framework, challenges and opportunities},
  volume   = {162},
  year     = {2021},
  issn     = {0360-1315},
  url      = {https://www.sciencedirect.com/science/article/pii/S036013152030292X},
  keywords = {Automated feedback, e-learning, Systematic literature review, Technology-enhanced learning, Intelligent tutoring systems, Computer tutoring},
}

